<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Slacker News</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.3.2/angular-ui-router.js"></script>
    <script src="/javascripts/angularapp.js"></script>
  </head>
  <body ng-app="slackerNews" ng-controller="mainCont">

    <nav class="navbar navbar-fixed-top" ng-controller="navCont">
      <ul class="nav navbar-nav">
        <li><a href="">Slacker News</a></li>
        <li ng-show="isLoggedIn()"><a>Welcome, {{ currentUser() }}!</a></li>
        <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
      </ul>
    </nav>

    <ui-view></ui-view>

    <script type="text/ng-template" id="/home.html">
      <div ng-repeat="post in posts | orderBy: '-score'" class="posts">
        <div class="votes">
          <ul>
            <li><span class="glyphicon glyphicon-menu-up" ng-click="upvote(post)"></span></li>
            <li>{{ post.score }}</li>
            <li><span class="glyphicon glyphicon-menu-down" ng-click="downvote(post)"></span></li>
          <ul>
        </div>

        <div class="postInfo">
          <ul>
            <li><h3><a href="{{ post.link }}" ng-show="post.link">{{ post.title }}</h3></a></li>
            <li><h3><a href="#/posts/{{ post._id }}" ng-hide="post.link">{{ post.title }}</h3></a></li>
            <li>submitted on {{ post.created_at | date: 'MMMM d, y @ h:mm a' }} by <a href="">{{ post.author }}</a></li>
            <li>
              <span class="glyphicon glyphicon-heart"></span>
              <a href="#/posts/{{ post._id }}"><span class="glyphicon glyphicon-comment"></span></a>
              <span class="glyphicon glyphicon-trash" ng-click="delete(post)" ng-show="isLoggedIn()"></span>
            </li>
          </ul>
        </div>
      </div>

      <br>
      <div class="addPost">
        <form ng-submit="addPost()" ng-show="isLoggedIn()">
          <h3>Add A New Post</h3>
          <input type="text" ng-model="title" id="title" placeholder="Title (Required)">
          <br>
          <input type="text" ng-model="link" id="link" placeholder="Link (Optional)">
          <br>
          <input type="text" ng-model="body" id="body" placeholder="Text (Optional)">
          <br>
          <button type="submit" class="btn btn-primary">Submit Post</button>
        </form>

        <div ng-hide="isLoggedIn()">
          <h3>You need to <a href="/#/login">log in</a> or <a href="/#/register">register</a> before you can add posts.</h3>
        </div>

      </div>
    </script>

    <script type="text/ng-template" id="/posts.html">

      <div class="postsContainer">

        <div class="page-header" style="margin-top: 100px;">
          <div ng-show="post.link">
            <ul>
              <li><h3><a href="{{ post.link }}">{{ post.title }}</a></h3></li>
              <li>{{ post.link }}</li>
              <li>submitted on {{ post.created_at | date: 'MMMM d, y @ h:mm a' }} by <a href="">{{ post.author }}</a></li>
            </ul>
          </div>

          <div ng-hide="post.link">
            <ul>
              <li><h2>{{ post.title }}</h2></li>
              <li>submitted on {{ post.created_at | date: 'MMMM d, y @ h:mm a' }} by <a href="">{{ post.author }}</a></li>

            </ul>
          </div>

        </div>

        <div ng-show="post.body">
          {{ post.body }}
          <hr>
        </div>

        <div ng-if="post.comments.length === 0">
          <h4>No one has left any comments yet!</h4>
        </div>

        <div ng-repeat="comment in post.comments | orderBy: '-score'">
          <span class="glyphicon glyphicon-chevron-up" ng-click="upvote(comment)">
          </span>
          <span class="glyphicon glyphicon-chevron-down" ng-click="downvote(comment)">
          </span>
          {{ comment.score }} - {{ comment.author }} says:
          <span>"{{ comment.body }}" on {{ comment.created_at | date: 'MMMM d, y @ h:mm a' }}</span>
          <span ng-click="delete(comment)" ng-show="isLoggedIn()">
            <b>Delete</b>
          </span>
          <hr>
        </div>
        <br>

        <form ng-submit="addComment()" ng-show="isLoggedIn()">
          <h3>Leave A Comment</h3>
          <input type="text" ng-model="body" id="body">
          <br>
          <button type="submit" class="btn btn-primary">Submit Comment</button>
        </form>

        <div ng-hide="isLoggedIn()">
          <h3>You need to <a href="/#/login">log in</a> or <a href="/#/register">register</a> before you can leave comments.</h3>
        </div>
      </div>

    </script>

    <script type="text/ng-template" id="/register.html">
      <div class="page-header">
        <h1>Slacker News</h1>
      </div>

      <div ng-show="error" class="alert alert-danger row">
        <span>{{ error.message }}</span>
      </div>

      <form ng-submit="register()">
        <h3>Register</h3>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Username" ng-model="user.username">
        </div>
        <div class="form-group">
          <input type="password" class="form-control" placeholder="Password" ng-model="user.password">
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
      </form>
    </script>

    <script type="text/ng-template" id="/login.html">
      <div class="page-header">
        <h1>Slacker News</h1>
      </div>

      <div ng-show="error" class="alert alert-danger row">
        <span>{{ error.message }}</span>
      </div>

      <form ng-submit="login()">
        <h3>Login</h3>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Username" ng-model="user.username">
        </div>
        <div class="form-group">
          <input type="password" class="form-control" placeholder="Password" ng-model="user.password">
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
      </form>
    </script>

  </body>
</html>
